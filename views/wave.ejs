<%- include('layout', {
  title: 'Wave Sessions',
  page: 'wave',
  body: `
<div class="page-header">
  <h1>Wave Sessions</h1>
  <div class="header-actions">
    <button id="refresh-btn" class="btn btn-secondary" ${refreshing ? 'disabled' : ''}>
      <span class="refresh-icon">&#8635;</span> ${refreshing ? 'Refreshing...' : 'Refresh'}
    </button>
  </div>
</div>

${refreshing ? `
<div id="refresh-status-panel" class="refresh-status-panel">
  <div class="refresh-status-content">
    <span class="refresh-status-icon">&#8635;</span>
    <span>Refreshing sessions from Wave... This may take 30-60 seconds.</span>
  </div>
</div>
` : ''}

<script>window.WAVE_STATE = { refreshing: ${refreshing} };</script>

${!authenticated ? `
<div class="alert alert-warning">
  <strong>Wave Not Authenticated</strong>
  <p>You need to set up Wave authentication to fetch sessions.</p>
  <p>Copy your AuthToken cookie from Wave and paste it below:</p>
  <form id="auth-form" class="auth-form">
    <textarea id="auth-token" placeholder="Paste AuthToken here..." rows="3"></textarea>
    <button type="submit" class="btn btn-primary">Save Token</button>
  </form>
</div>
` : ''}

<div class="sessions-container">
  <!-- Queue Status Panel -->
  <div id="queue-status-panel" class="queue-status-panel" style="display: none;">
    <div class="queue-status-content">
      <span class="queue-status-icon">&#9881;</span>
      <span id="queue-status-text">Processing...</span>
    </div>
    <div class="queue-status-right">
      <span id="queue-progress-text" class="queue-progress-text">0/0</span>
      <div class="queue-progress-bar">
        <div id="queue-progress-fill" class="queue-progress-fill" style="width: 0%"></div>
      </div>
    </div>
  </div>

  <div class="sessions-stats">
    <span id="session-count">${sessions.length} sessions</span>
    <span id="unprocessed-count">
      ${sessions.filter(s => !s.processed && !s.skipped && !s.queued).length} unprocessed
    </span>
    <label class="skip-filter">
      <input type="checkbox" id="hide-processed" checked />
      Hide processed (${sessions.filter(s => s.processed).length})
    </label>
    <label class="skip-filter">
      <input type="checkbox" id="show-skipped" />
      Show skipped (${sessions.filter(s => s.skipped).length})
    </label>
  </div>

  <!-- Bulk Actions -->
  <div class="bulk-actions">
    <button id="btn-queue-next-10" class="btn btn-secondary" ${refreshing ? 'disabled' : ''}>Queue Next 10</button>
    <button id="btn-queue-all" class="btn btn-secondary" ${refreshing ? 'disabled' : ''}>Queue All Unprocessed</button>
  </div>

  <div class="sessions-list" id="sessions-list">
    ${sessions.length === 0 ? `
    <div class="empty-state">
      <p>No sessions found. Click Refresh to fetch from Wave.</p>
    </div>
    ` : sessions.map(session => `
    <div class="session-card ${session.processed ? 'processed' : ''} ${session.skipped ? 'skipped' : ''} ${session.queued ? 'queued' : ''}" data-session-id="${session.id}" data-session-url="${session.url}">
      <div class="session-info">
        <h3 class="session-title">${session.title}</h3>
        <div class="session-meta">
          <span class="session-date">${session.date || 'Unknown date'}</span>
          <span class="session-duration">${session.duration || ''}</span>
        </div>
      </div>
      <div class="session-actions">
        ${session.processed ? `
        <span class="badge badge-success">Processed</span>
        ` : session.queued ? `
        <span class="badge badge-queued">Queued</span>
        ` : session.skipped ? `
        <span class="badge badge-muted">Skipped</span>
        <button class="btn btn-sm btn-outline btn-unskip" data-url="${session.url}">Undo</button>
        ` : `
        <button class="btn btn-primary btn-process" data-url="${session.url}" data-title="${session.title}">
          Process Now
        </button>
        <button class="btn btn-secondary btn-queue" data-url="${session.url}" data-title="${session.title}">
          Queue
        </button>
        <button class="btn btn-outline btn-skip" data-url="${session.url}" data-title="${session.title}">
          Skip
        </button>
        `}
        <a href="${session.url}" target="_blank" class="btn btn-link">View</a>
      </div>
    </div>
    `).join('')}
  </div>
</div>

<!-- Transcript Modal -->
<div id="transcript-modal" class="modal" style="display:none;">
  <div class="modal-content modal-large">
    <div class="modal-header">
      <h2 id="modal-title">Session Transcript</h2>
      <button class="modal-close">&times;</button>
    </div>
    <div class="modal-body">
      <div id="transcript-loading" style="display:none;">
        <p>Fetching transcript... This may take up to 30 seconds.</p>
        <div class="loading-spinner"></div>
      </div>
      <div id="transcript-content" style="display:none;">
        <pre id="transcript-text"></pre>
      </div>
    </div>
    <div class="modal-footer">
      <button id="copy-transcript" class="btn btn-secondary" style="display:none;">Copy Transcript</button>
      <button class="btn btn-secondary modal-close-btn">Close</button>
    </div>
  </div>
</div>

